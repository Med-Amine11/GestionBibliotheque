@page
@model GestionBibliotheque.Pages.loginModel
@{
    
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-lg p-5" style="width: 500px; min-height: 520px;">

        <div class="d-flex flex-column justify-content-center h-100">
            <h3 class="text-center mb-5">Connexion</h3>
            
            <form method="post">
                <div class="mb-4">
                    <label class="form-label">Email</label>
                    <input type="email" asp-for="Email" class="form-control form-control-lg"
						   required>
                </div>

                <div class="mb-5">
                    <label class="form-label">Mot de passe</label>
                    <input type="password" asp-for="Password" class="form-control form-control-lg"
                           required>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Erreur))
                {
                    <div class="alert alert-danger" style="text-align : center ;">
                        @Model.Erreur
                    </div>
                }
                <button type="submit" class="btn btn-primary btn-lg w-100">
                    Se connecter
                </button>
            </form>
        </div>
    </div>
</div>